@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animals

<h4>Add a new animal</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)<br>
    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)<br>
    @Html.LabelFor(model => model.Age)
    @Html.TextBoxFor(model => model.Age)<br>
    @Html.LabelFor(model => model.Gender)
    @Html.TextBoxFor(model => model.Gender)<br>
    @Html.LabelFor(model => model.Species)
    @Html.TextBoxFor(model => model.Species)<br>
    <input type="submit" value="Add a new animal" />
}

<p>@Html.ActionLink("Show all animals", "Index")</p>